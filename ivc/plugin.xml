<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.ui.startup">
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.tigris.subversion.subclipse.core.PreferenceInitializer"/>
	</extension>
   	   
	<extension	point="org.eclipse.team.core.ignore">
    	<ignore
            enabled="true"
            pattern=".ivc,.class,.project">
		</ignore>
 		
	</extension>

	<extension point="org.eclipse.team.core.repository">     
    	<repository            
    		class="ivc.repository.IVCRepositoryProvider"            
    			id="ivc.reprovider"
    			metaFilePaths=".ivc,.project" >
    	</repository>    
	</extension>

	<extension
		point="org.eclipse.team.ui.configurationWizards">
		<wizard
			name="IVC"
			icon="share_icon.png"	
			class="ivc.wizards.sharing.SharingWizard"
			id="ivc.wizards.sharing.SharingWizard">
		</wizard>
	</extension>
	
	<extension
	      point = "org.eclipse.ui.newWizards">
		<category
		   id = "ivc"
		   name="IVC">
		</category>
	 	<wizard
		   id = "ivc.wizards.checkout.checkoutWizard"
	      	   name = "IVC"
		   class="ivc.wizards.checkout.CheckoutWizard"
		   
		   project="true"
		   icon="img/share_icon.png">
	    	   <description>Checkout a new IVC project</description>
		</wizard>
	</extension>
	
	<extension point="org.eclipse.ui.actionSets">
	    <actionSet
	            id="ivc.actionSets"
	            label="cacats"
	            visible="true">
	        
	         
	         <action
	               class="ivc.fireworks.actions.TestAction"
	               id="ivc.fireworks.actions.test"
	               label="Test"
	               menubarPath="visible">
	         </action>
	      
	      </actionSet>    
    </extension>

	 <extension point="org.eclipse.ui.decorators">
      
      <decorator
            adaptable="true"
            class="ivc.fireworks.decorators.Decorator"
            id="ivc.fireworks.decorators.Decorator"
            label="IVC Decorator"
            state="false">
      </decorator> 	
      
      <decorator
            adaptable="true"
            class="ivc.fireworks.decorators.TreeDecorator"
            id="ivc.fireworks.decorators.TreeDecorator"
            label="IVC Tree Decorator"
            state="false">
      </decorator>
 	
 	</extension>
	
	<extension point="org.eclipse.ui.popupMenus">
	    <objectContribution
	          id="ivc.contribution.versionedFiles"
	          objectClass="org.eclipse.core.resources.mapping.ResourceMapping"
	          adaptable="true">
			<action class="ivc.fireworks.actions.CompareEditorAction"
	               id="ivc.fireworks.actions.compare"
	               label="Compare"
	               menubarPath="visible">
	         </action>
		
			<action class="ivc.fireworks.actions.RefreshAction"
	               id="ivc.fireworks.actions.marker.refresh"
	               label="Refresh"
	               menubarPath="visible">
	         </action>
	         
	         <action class="ivc.fireworks.actions.ClearCacheAction"
	               id="ivc.fireworks.actions.marker.clear"
	               label="ClearCache"
	               menubarPath="visible">
	         </action>
		</objectContribution>
	</extension>
	
	<extension
	       point="org.eclipse.ui.popupMenus">
	    <objectContribution
	          id="ivc.contribution.versionedFiles"
	          objectClass="org.eclipse.core.resources.mapping.ResourceMapping"
	          adaptable="true">
	          
	     <enablement>
           <adapt type="org.eclipse.core.resources.mapping.ResourceMapping">
              <test property="org.eclipse.core.resources.projectPersistentProperty" args="org.eclipse.team.core.repository,ivc.reprovider" />
           </adapt>
         </enablement>    
	          
	       <action
	             class="ivc.fireworks.actions.AddToRepositoryAction"             
	             id="ivc.actions.AddToRepository"
	             label="Add to repository"
	             menubarPath="team.main/group1">
	       </action>
	       
	       <action
	             class="ivc.fireworks.actions.CommitAction"             
	             id="ivc.actions.Commit"
	             label="Commit"
	             menubarPath="team.main/group1">
	       </action>
	       
	       <action
	             class="ivc.fireworks.actions.UpdateAction"             
	             id="ivc.actions.Update"
	             label="Update"
	             menubarPath="team.main/group1">
	       </action>
	       
	    </objectContribution>
	 </extension>
	
	<extension point="org.eclipse.core.resources.markers"
         id="ivc.Marker"
         name="IVC">
      <persistent
            value="false">
      </persistent>
      <super type="org.eclipse.core.resources.problemmarker"/>
   </extension>
   
   <extension point="org.eclipse.ui.ide.markerResolution">
		<markerResolutionGenerator
			markerType="ivc.Marker"
			class="ivc.fireworks.markers.MarkerResolutionGenerator">
		</markerResolutionGenerator>
	</extension>
	
	<extension point="org.eclipse.ui.editors.annotationTypes">
      <type markerType="ivc.Marker"
            name="ivc.MarkerAnnotation">
      </type>
	</extension>

	<extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
		<specification
            annotationType="ivc.MarkerAnnotation"
            icon="img/marker.gif"
            textPreferenceKey="myAppIndication"
            textPreferenceValue="true"
            overviewRulerPreferenceKey="myAppIndicationInOverviewRuler"
            overviewRulerPreferenceValue="true"
            verticalRulerPreferenceKey="myAppIndicationInVerticalRuler"
            verticalRulerPreferenceValue="true"
            highlightPreferenceKey="myAppHighlighting"
            highlightPreferenceValue="false"
            colorPreferenceKey="myAppIndicationColor"
            colorPreferenceValue="255,0,0"
            presentationLayer="3"
            showInNextPrevDropdownToolbarAction="false"
            includeOnPreferencePage="true"
             >
		</specification>
	</extension>
	
</plugin>
